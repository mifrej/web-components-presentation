<body>
<script defer>
  class XComponent extends HTMLElement {
    constructor() {
      super();
    }
    connectedCallback() {
      this.innerHTML = '<h1>Hello World from a Web Component!</h1>';
    }
  }
  customElements.define('x-component', XComponent);
</script>
<x-component></x-component>
</body>
</html>
